#!/bin/bash
set -euo pipefail

GIT_ROOT="${GIT_ROOT:-$(git rev-parse --show-toplevel)}"
. "${GIT_ROOT}/bin/include/versioning"
. "${GIT_ROOT}/bin/include/docker"

if [ -z ${TEST_NAMESPACE+x} ]; then
  TEST_NAMESPACE="test-storage$(date +%s)"
  export TEST_NAMESPACE
fi

# Build the required helm charts to run the cf-operator
./bin/build-helm

(
    kubectl get namespace -o name                       | grep test-storage
    kubectl get mutatingwebhookconfigurations -o name   | grep cf-operator
    kubectl get validatingwebhookconfigurations -o name | grep cf-operator
) | xargs --no-run-if-empty kubectl delete --wait

set -x
NODES=${NODES:-3}
FLAKE_ATTEMPTS=${FLAKE_ATTEMPTS:-3}
ginkgo \
  -mod=vendor \
  --nodes="$NODES" \
  --flakeAttempts="$FLAKE_ATTEMPTS" \
  e2e/kube/storage
